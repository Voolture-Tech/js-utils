{
  "name": "@devdiegomartins/js-utils",
  "version": "0.0.22",
  "description": "A collection of useful JavaScript and Typescript utilities",
  "private": false,
  "author": {
    "name": "Diego Martins",
    "email": "diegoribeiromartins@gmail.com"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./types": "./dist/types/index.d.ts"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "npx rimraf -g node_modules dist bun.lockb package-lock.json yarn.lock *.log",
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "test": "ts-jest",
    "test:watch": "ts-jest --watch",
    "test:coverage": "ts-jest --coverage",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/jest": "^29.5.14",
    "@types/node": "latest",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsup": "latest",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
